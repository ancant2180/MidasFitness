<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="applicationController.Controller">
   <children>
      <VBox prefHeight="600.0" prefWidth="400.0">
         <children>
            <Pane prefHeight="134.0" prefWidth="600.0">
               <children>
                  <Label layoutX="180.0" layoutY="30.0" text="Welcome to the Food Creator!">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label layoutX="170.0" layoutY="74.0" text="Please Follow the Prompted Text">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <TextField fx:id="createFoodName" promptText="Food Name..." />
            <TextField fx:id="createFoodCal" promptText="Food Calories..." />
            <TextField fx:id="createFoodPro" layoutX="10.0" layoutY="10.0" promptText="Food Protein..." />
            <TextField fx:id="createFoodCarb" layoutX="10.0" layoutY="35.0" promptText="Food Carbs..." />
            <TextField fx:id="createFoodSug" layoutX="10.0" layoutY="110.0" promptText="Food Sugars..." />
            <TextField fx:id="createFoodFat" layoutX="10.0" layoutY="85.0" promptText="Food Fats..." />
            <Pane layoutX="10.0" layoutY="10.0" prefHeight="134.0" prefWidth="600.0">
               <children>
                  <Label layoutX="83.0" layoutY="90.0" text="Please Note: If any value is left blank the default value will be zero">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <Button fx:id="createFoodButton" layoutX="240.0" layoutY="37.0" mnemonicParsing="false" onAction="#handleFoodCreationEvent" text="Create Meal">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</AnchorPane>
